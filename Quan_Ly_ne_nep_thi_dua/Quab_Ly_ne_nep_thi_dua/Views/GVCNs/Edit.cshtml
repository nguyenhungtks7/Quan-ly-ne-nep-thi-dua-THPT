            ngay = DateTime.MinValue;
        }
    }
    <div class="form-group">
        @Html.LabelFor(model => model.NgaySinh, htmlAttributes: new { @class = "control-label" })<span style="color:red"> *</span>
        <div class="col-md-10">
            @Html.TextBox("NgaySinh", ngay.ToString("yyyy-MM-dd"), new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
